# Information pages
GET     /                           controllers.Application.index
GET     /product                    controllers.Application.product
GET     /status                     controllers.Application.status

# Authentication and Registration
POST    /                           controllers.UserController.register
GET     /user/login                 controllers.UserController.login
POST    /user/login                 controllers.UserController.authenticate
GET     /user/logout                controllers.UserController.logout
GET     /user/logintest             controllers.UserController.isLoggedIn
GET     /confirm/:userID/:confirmationToken controllers.UserController.confirmRegistration(userID: Long, confirmationToken: String)
POST    /user/reset_secret_key      controllers.UserController.changeSecretKey
GET     /user/update_profile        controllers.UserController.editProfile
POST    /user/update_profile        controllers.UserController.updateProfile

# Applications
GET     /applications               controllers.BreakpointApplicationController.myApplications
GET     /applications/new           controllers.BreakpointApplicationController.newApplication
POST    /applications/new           controllers.BreakpointApplicationController.processNewApplication
GET     /applications/:id           controllers.BreakpointApplicationController.application(id: Long)
GET     /applications/:id/edit      controllers.BreakpointApplicationController.editApplication(id: Long)
POST    /applications/:id/edit      controllers.BreakpointApplicationController.processEditApplication(id: Long)
POST     /applications/:id/delete   controllers.BreakpointApplicationController.deleteApplication(id: Long)

# APIv1
#POST    /api/v1/evaluate            controllers.APIv1Controller.evaluate

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
